<UserControl x:Class="ModuleLogin.Views.LogInButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:inf="clr-namespace:GCA.Core;assembly=GCA.Core"
             xmlns:local="clr-namespace:ModuleLogin.Views"
             mc:Ignorable="d">
    <Grid>
        <Button Content="Log In"
                    FontSize="13"
                    Command="{x:Static inf:GlobalCommands.NavigateCommand}"
                    CommandParameter="{x:Type local:LogInView}"/>
    </Grid>
</UserControl>
